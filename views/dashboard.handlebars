<h2>Your Dashboard</h2>

{{#each posts}}
    <article>
        <h2>{{this.title}}</h2>
        <p>Posted on {{this.createdAt}}</p>
        <a href="/post/{{this.id}}">Edit</a>
        <button data-id="{{this.id}}" class="delete-post">Delete</button>
    </article>
{{/each}}

<button id="new-post">New Post</button>

<form id="post-form" style="display: none;">
    <input type="text" id="post-title" placeholder="Post Title">
    <textarea id="post-content" placeholder="Post Content"></textarea>
    <button id="save-post">Save</button>
</form>
